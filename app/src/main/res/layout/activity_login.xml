<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎登录"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录您的账户"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.114"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.191" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_et"
        android:hint="请输⼊邮箱"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:paddingStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/shape_et"
        android:hint="请输⼊密码"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingStart="50dp"
        android:paddingEnd="12dp"
        android:drawablePadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <ImageView
        android:id="@+id/email_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/email"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/et_email"
        app:layout_constraintTop_toTopOf="@id/et_email"
        app:layout_constraintBottom_toBottomOf="@id/et_email" />

    <ImageView
        android:id="@+id/password_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/password"
        android:scaleType="centerCrop"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toStartOf="@id/et_password"
        app:layout_constraintTop_toTopOf="@id/et_password"
        app:layout_constraintBottom_toBottomOf="@id/et_password" />

    <TextView
        android:id="@+id/forget_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/et_password"
        app:layout_constraintTop_toBottomOf="@id/et_password" />

    <Button
        android:id="@+id/login"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:backgroundTint="@null"
        android:layout_margin="16dp"
        android:text="登录"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_btn"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"/>

    <View
        android:id="@+id/divider_left"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_divider_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67"
        app:layout_constraintHorizontal_chainStyle="packed" />

    <TextView
        android:id="@+id/tv_divider_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="或者"
        android:textColor="#999999"
        android:textSize="14sp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@id/divider_left"
        app:layout_constraintEnd_toStartOf="@id/divider_right"
        app:layout_constraintStart_toEndOf="@id/divider_left"
        app:layout_constraintTop_toTopOf="@id/divider_left" />

    <View
        android:id="@+id/divider_right"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/divider_left"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_divider_text"
        app:layout_constraintTop_toTopOf="@id/divider_left" />

    <Button
        android:id="@+id/weixin_login"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:backgroundTint="@null"
        android:layout_marginStart="16dp"
        android:text="微信登录"
        android:textColor="#606060"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:paddingStart="70dp"
        android:background="@drawable/shape_et"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"/>

    <ImageView
        android:id="@+id/weixin_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/weixin"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/weixin_login"
        app:layout_constraintTop_toTopOf="@id/weixin_login"
        app:layout_constraintBottom_toBottomOf="@id/weixin_login" />

    <Button
        android:id="@+id/apple_login"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:backgroundTint="@null"
        android:layout_marginEnd="16dp"
        android:text="Apple登录"
        android:textColor="#606060"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="start|center_vertical"
        android:paddingStart="70dp"
        android:background="@drawable/shape_et"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.77"/>

    <ImageView
        android:id="@+id/apple_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/apple"
        android:scaleType="centerCrop"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="@id/apple_login"
        app:layout_constraintTop_toTopOf="@id/apple_login"
        app:layout_constraintBottom_toBottomOf="@id/apple_login" />

    <TextView
        android:id="@+id/notexist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有账户？"
        android:textColor="#999999"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.391"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即注册"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/notexist"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82" />

</androidx.constraintlayout.widget.ConstraintLayout>